MYSQL:
docker run -ti --rm -p 3307:3306 --name wiki_mysql -v $(PWD)/database/.dbdata:/var/lib/mysql -e MYSQL_DATABASE=dev_wiki -e MYSQL_USER=lpl_wiki -e MYSQL_PASSWORD=lpl_wiki -e MYSQL_ROOT_PASSWORD=lpl_wiki_root mysql:5.6

PHPMYADMIN:
docker run -tid --rm --name wiki_phpmyadmin --link wiki_mysql:db -p 8888:80 phpmyadmin/phpmyadmin
available at http://localhost:8888

APP (PHP/LARAVEL):
docker run -tid --rm --name wiki_laravel -p 10000:10000 --link wiki_mysql:mysql -v $(PWD):/app/ lpl_wiki
available at http://localhost:10000